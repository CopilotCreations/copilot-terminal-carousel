# Copilot Terminal Carousel Configuration

# Server binding
HOST=127.0.0.1
PORT=5000

# Data directory for persistence and logs
DATA_DIR=./data

# Path to copilot executable
COPILOT_PATH=copilot.exe

# Session limits
MAX_SESSIONS=10

# Terminal dimensions
INITIAL_COLS=120
INITIAL_ROWS=30
MIN_COLS=20
MAX_COLS=300
MIN_ROWS=5
MAX_ROWS=120

# Input limits
MAX_INPUT_CHARS_PER_MESSAGE=16384

# Logging
LOG_FILE=./data/logs/app.jsonl
LOG_LEVEL=INFO

# WebSocket limits
WS_MAX_MESSAGE_BYTES=1048576

# Security
ALLOW_NON_LOCALHOST=false
